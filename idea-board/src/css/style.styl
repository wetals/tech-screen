// Import all partials
@require './_*.styl'

.header
  display flex
  background bodyColor
  color white
  text-align center
  padding 20px 80px 20px 40px
  justify-content: space-between;

  .sortBy__label
    margin-right 10px

.main
  padding 30px

.description
  position: relative
  .counter
    position absolute
    bottom -21px
    right 0
    display block
    width 150px
    font-size 12px
    padding 5px 0
    text-align center
    background orange
    color white
    border-bottom-left-radius 3px
    border-bottom-right-radius 3px

.action-button
  display flex
  justify-content space-between
  align-items baseline

.idea_date
  text-align right

.field
  margin-bottom 18px

input, textarea
  -webkit-appearance none
  outline none
  border 1px solid borderColor
  background white
  color black
  width 100%
  padding 8px
  line-height 20px
  border-radius 3px
  transition .1s border

textarea
  height 95px

button
  background bodyColor
  color white
  text-align center
  display inline-block
  border none
  padding 10px 20px
  border-radius 3px

.ideas
  display flex
  flex-wrap wrap
  margin 0
  padding 0

.idea
  border: 1px solid bodyColor
  border-radius 5px
  padding 20px
  margin 15px
  &.edit-mode
    input, textarea
      border-color transparent
    &.focus
      input, textarea
        border-color borderColor


@media only screen and (min-width: 320px)
  .ideas
    flex-direction: column

  .idea
    width: 100%

@media only screen and (min-width: 768px)
  .ideas
    flex-direction: row

  .idea
    width: 45%

@media only screen and (min-width: 1024px)
  .idea
    width: 30%

